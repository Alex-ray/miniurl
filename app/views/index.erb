<div class="container">
  <h1>Welcome to bits</h1>
  <% if @login_fail %>
    <p>Wrong user name or password!</p>
  <%end%>
  <%if @user.nil? %>

    <form name="login" action="/login" method="post">
      <input id="email" name="email" type="email" placeholder="email@example.com" />
      <input id="pwd" type="password" name="password" placeholder="Password" />
      <input id="button" type="submit" value="Login" />
    </form>

    <form action="/signup" method="get">
      <button name="signup" type="submit" value="sign_up">Sign Up</button>
    </form>

  <% else %>
    <h2>Welcome back <%= @user %>!</h2>
    <form action="/logout" method="get">
      <button name="signup" type="submit" value="logout">Log Out</button>
    </form>
  <% end %>
</div>
